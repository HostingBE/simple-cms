{% include "frontend/header.twig" %}

<div class="container">        
<h1 class="py-4">{{ trans('manager.page.add_page') | capitalize }}</h1>

{% include "manager/manager-menu.twig" %} 
{% include "backend/alert.twig" %} 

<div class="row">
        
<div class="col-12">
<div class="card mb-3">
<div class="card-body">
<form name="todo" action="{{url}}/manager/add-page" method="POST" id="ajax-form">

{{csrf() | raw }}
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.page.name') | capitalize }}</label>
  <input class="form-control" type="text" name="ap-name" value="" placeholder="vul de naam van de pagina in!">
</div>
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.page.title') | capitalize }}</label>
  <input class="form-control" type="text" name="ap-titel" value="" placeholder="vul de titel van de pagina in!">
</div>
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.page.description') | capitalize }}</label>
  <input class="form-control" type="text" name="ap-description" value="" placeholder="vul de description van de pagina in!">
</div>
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.page.keywords') | capitalize }}</label>
  <input class="form-control" type="text" name="ap-keywords" value="" placeholder="vul de keywords van de pagina in!">
</div>
<div class="row">
  <div class="col">
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.page.template') | capitalize }}</label>
  <select name="ap-template" class="form-control">
  {% for template in templates %}
  <option value="{{template}}">{{template}}</option>
  {% endfor %}
  </select>
</div>
</div>
<div class="col">
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.page.language') | capitalize }}</label>
  <select name="ap-language" class="form-control">
  {% for language in languages %}
  <option value="{{language}}">{{language}}</option>
  {% endfor %}
  </select>
</div>
</div>
</div>
<!-- Text input -->
<div class="mb-3 row">
<div class="col-md-6">
  <label for="text-input" class="form-label">{{ trans('manager.page.publish') | capitalize }}</label>
<!-- Default switch -->
<div class="form-check form-switch">
  <input class="form-check-input" id="publish" name="ap-page-publish" type="checkbox" value="y">
  <label class="form-check-label" for="publish">{{ trans('manager.page.publish') | capitalize }}</label>
   </div>
<!-- Default switch -->
<div class="form-check form-switch">
  <input class="form-check-input" id="links" name="ap-page-links" type="checkbox" value="y" checked>
  <label class="form-check-label" for="links">{{ trans('manager.page.internal_links') | capitalize }}</label>
</div>
<!-- Default switch -->
<div class="form-check form-switch">
  <input class="form-check-input" id="links" name="ap-page-markdown" type="checkbox" value="y" checked>
  <label class="form-check-label" for="links">{{ trans('manager.page.markdown') | capitalize }}</label>
   </div>
</div>
<div class="col-md-6">
  <label for="text-input" class="form-label">{{ trans('manager.page.publish_date') | capitalize }}</label>
  <input class="form-control" type="text" name="publish_date" value="" placeholder="date of publish if publish is yes" data-toggle="datepicker" data-datepicker-options='{"altInput": true, "altFormat": "F j, Y", "dateFormat": "Y-m-d"}'>
</div>
</div>

<!-- Textarea -->
<div class="mb-3">
  <label for="textarea-input" class="form-label">{{ trans('manager.page.content') | capitalize }}</label>
  <textarea class="form-control" id="textarea-input" name="ap-content" rows="15" placeholder="vul de content van de pagina in!"></textarea>
</div>

  <button class="btn btn-primary" type="submit" id="submit-ajax">{{ trans('manager.page.add_page') | capitalize }}</button>
</form>
</div>
</div>

</div><!-- /.col -->
</div><!-- /. row -->
</form>

      </div>
</div>



{% include "frontend/footer.twig" %}
