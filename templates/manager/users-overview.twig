{% include "frontend/header.twig" %}

      <div class="container">
        
        <h1 class="mt-4 pb-4">Manager gebruikers overzicht</h1>

<div class="row mb-4">

{% include "manager/manager-menu.twig" %}

</div>

<div class="row">


       {% include "backend/alert.twig" %} 
 
 <div class="card mb-3 bg-altlightorange">
 <div class="card-body bg-altlightorange">

     <table class="table table-hover">
     <thead>
     <tr>
            <th>#</th>
            <th>icon</th>
            <th>e-mail</th>            
            <th>voornaam</th>
            <th>achternaam</th> 
            <th>profiel <i class="h5 fi-alert-triange text-info" data-bs-toggle="tooltip" title="(user_data, ingelogd)"></i></th>  
            <th>datum</th>
            <th>beheer</th>  
     </tr>
     </thead>

     <tbody>
     {% for user in users %}
     <tr>
     <td>..</td>
     <td class="text-center"><img src="{% if user.icon %}/images/users/{{user.id}}/{{user.icon}}{% else %}/images/default-icon.jpg{% endif %}" class="img-thumbnail" style="width: 50px; height: 50px;" data-bs-toggle="tooltip" title="{{user.first_name}} {{user.last_name}}"></td>
     <td>{{user.email}}</td>    
     <td>{{user.first_name}}</td>
     <td>{{user.last_name}}</td> 
     <td class="fw-bold text-center">({{user.settings}}, {{user.aantaldagen}})</td>
     <td>{{user.datum}}</td>
     <td class="text-right"><a href="/manager/bekijk-gebruiker/{{user.id}}/" class="btn btn-secondary btn-sm">bekijk</a> <a href="/manager/verwijder-gebruiker/{{user.id}}/" class="btn btn-danger btn-sm" data-url="/manager/verwijder-gebruiker/{{user.id}}/">delete</a></td>
     </tr>
     {% endfor %}
     </tbody>
     </table>
     </div>
     </div>
</div><!-- /. row -->

{% include "backend/pagelinks.twig" %} 
      </div>
      </div>



{% include "frontend/footer.twig" %}       