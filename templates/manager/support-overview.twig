{% include "frontend/header.twig" %}

<div class="container">

        <h1 class="pt-4 pb-4">{{ trans('manager.support.support_overview') | capitalize }}t</h1>

<div class="row mb-4">

{% include "manager/manager-menu.twig" %} 
</div>
        
<div class="row">
       {% include "backend/alert.twig" %} 

<div class="card mb-3">
<div class="card-body">
<table class="table dark">
<tr>
<th>#</th>
<th>{{ trans('manager.support.name') | capitalize }}</th>
<th class="text-center">{{ trans('manager.support.language') | capitalize }}</th>
<th>{{ trans('manager.support.title') | capitalize }}</th>
<th>{{ trans('manager.support.description') | capitalize }}</th>
<th>{{ trans('manager.support.keywords') | capitalize }}</th>
<th>{{ trans('manager.support.date') | capitalize }}</th>
<th class="text-center">{{ trans('manager.support.manage') | capitalize }}</th>
</tr>

{% if artikelen|length < 1 %}
<tr>
		<td colspan="8" class="text-center">{{ trans('manager.support.no_support') | capitalize }}</td>
</tr>
{% endif %}

{% if artikelen|length > 0 %}
{% for artikel in artikelen %}
<tr>
<td>..</td>
<td>{{artikel.naam}}</td>
<td class="text-center"><img src="{{url}}/images/{{artikel.language}}.jpg" class="rounded"></td>
<td>{{artikel.titel}}</td>
<td class="text-center"><span class="badge bg-warning" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="right" title="meta description" data-bs-content="{{artikel.description}}">{{artikel.description|length}}</span></td>
<td class="text-center"><span class="badge bg-danger" data-bs-container="body" data-bs-toggle="popover" data-bs-placement="right" title="meta keywords" data-bs-content="{{artikel.keywords}}">{{artikel.keywords|length}}</span></td>
<td>{{artikel.datum}}</td>
<td class="text-center"><a href="{{url}}/manager/support-edit/{{artikel.id}}/" class="btn btn-dark btn-sm">{{ trans('manager.support.edit') }}</a> <a href="{{url}}/manager/delete-support/{{artikel.id}}/" class="btn btn-danger btn-sm" data-url="{{url}}/manager/delete-support/{{artikel.id}}/">{{ trans('manager.support.delete') }}</a></td>
</tr>

{% endfor %}
{% endif %}


</table>
</div>
</div>
</div><!-- /. row -->

      </div>
      </div>


{% include "frontend/footer.twig" %}
