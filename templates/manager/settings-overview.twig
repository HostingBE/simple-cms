{% include "frontend/header.twig" %}


<div class="container">

	<h1 class="pt-4 pb-4">Settings overview</h1>

<div class="row mb-4">
{% include "manager/manager-menu.twig" %}
</div>

{% include "backend/alert.twig" %}

<div class="row">
<div class="col-md-9 col-sm-12">

<div class="card mb-3">
<div class="card-body">
<h2>Overview settings</h2>

<form name="settings" action="{{url}}/manager/settings" method="POST" id="ajax-form" data-reload="true">
  {{ csrf() | raw }}
<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Sitename</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="sitename" value="{{settings.sitename.value}}" placeholder="name of website!">
</div>
</div>
<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Record lengte</label>
    <div class="col-md-9">
  <select name="records" class="form-control">
  <option value="10"{% if settings.records.value == "10" %} selected{% endif %}>10</option>
  <option value="20"{% if settings.records.value == "20" %} selected{% endif %}>20</option>  
  <option value="50"{% if settings.records.value == "50" %} selected{% endif %}>50</option>
  <option value="100"{% if settings.records.value == "100" %} selected{% endif %}>100</option>  
</select>
</div>
</div>

<div class="row mb-3">
  <label class="col-md-3 form-check-label" for="html_email">HTML email sending</label>
 <div class="col-md-3">
<div class="form-check form-switch">
   <input class="form-check-input" name="html_email" type="checkbox" id="html_email"{% if settings.html_email.value == "on" %}  checked{% endif %}></div>
    </div>

  <label class="col-md-3 form-check-label" for="cache">Cache website</label>
 <div class="col-md-3">
<div class="form-check form-switch">
   <input class="form-check-input" name="cache" type="checkbox" id="cache"{% if settings.cache.value == "on" %}  checked{% endif %}></div>
</div>

</div>


<div class="row mb-3">
  <label class="col-md-3 form-check-label" for="advertenties">Advertenties</label>
 <div class="col-md-3">
<div class="form-check form-switch">
   <input class="form-check-input" name="advertenties" type="checkbox" id="advertenties"{% if settings.advertenties.value == "on" %}  checked{% endif %}></div>
    </div>

  <label class="col-md-3 form-check-label" for="multilanguage">Multi language</label>
 <div class="col-md-3">
<div class="form-check form-switch">
   <input class="form-check-input" name="multilanguage" type="checkbox" id="multilanguage"{% if settings.multilanguage.value == "on" %}  checked{% endif %}></div>
    </div>
</div>

<div class="row mb-3">
  <label class="col-md-3 form-check-label" for="htmleditor">HTML editor</label>
 <div class="col-md-3">
<div class="form-check form-switch">
   <input class="form-check-input" name="htmleditor" type="checkbox" id="htmleditor"{% if settings.htmleditor.value == "on" %}  checked{% endif %}></div>
    </div>
  <label class="col-md-3 form-check-label" for="disablesupport">Disable Support</label>
 <div class="col-md-3">
<div class="form-check form-switch">
   <input class="form-check-input" name="disablesupport" type="checkbox" id="disablesupport"{% if settings.disablesupport.value == "on" %}  checked{% endif %}></div>
    </div>

</div>

<div class="row mb-3">
  <label class="col-md-3 form-check-label" for="disableforum">Disable Forum</label>
 <div class="col-md-9">
<div class="form-check form-switch">
   <input class="form-check-input" name="disableforum" type="checkbox" id="disableforum"{% if settings.disableforum.value == "on" %}  checked{% endif %}></div>
    </div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Website url</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="url" value="{{settings.url.value}}" placeholder="website root url ..">
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Redirect url</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="redirect" value="{{settings.redirect.value}}" placeholder="redirect url after login ..">
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Search api username</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="apiusername" value="{{settings.apiusername.value}}" placeholder="search api username ..">
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Search api password</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="apipassword" value="{{settings.apipassword.value}}" placeholder="search api password ..">
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">E-mail originator</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="email" value="{{settings.email.value}}" placeholder="e-mail address originator ..">
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Originator text</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="email_name" value="{{settings.email_name.value}}" placeholder=" originator text ..">
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Resize image to size</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="image_size" value="{{settings.image_size.value}}" placeholder=" resize image to size ..">
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Address</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="address" value="{{settings.address.value}}" placeholder=" address for contact page ..">
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Zipcode</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="zipcode" value="{{settings.zipcode.value}}" placeholder=" zipcode for contact page ..">
</div>
</div>


<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">City</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="city" value="{{settings.city.value}}" placeholder=" city for contact page ..">
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Country</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="country" value="{{settings.country.value}}" placeholder=" country for contact page ..">
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">COC number</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="coc" value="{{settings.coc.value}}" placeholder=" COC number for contact page ..">
</div>
</div>
<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">VAT number</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="vat" value="{{settings.vat.value}}" placeholder=" VAT number for contact page ..">
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">IBAN number</label>
  <div class="col-md-9">
  <input class="form-control" type="text" name="iban" value="{{settings.iban.value}}" placeholder=" IBAN number for contact page ..">
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Footer e-mail</label>
  <div class="col-md-9">
  <textarea class="form-control" name="footer" placeholder="footer of e-mail .." rows='8'>{{settings.footer.value}}</textarea>
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Background captcha</label>
    <div class="col-md-9">
  {% set colors = ['blue','orange','pink','white','green','red','black'] %}

  <select name="bgcolor" class="form-control">
  {% for color in colors %}
  <option value="{{color}}"{% if settings.bgcolor.value == color %} selected{% endif %}>{{color}}</option>
  {% endfor %}
</select>
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Color captcha</label>
    <div class="col-md-9">
  <select name="color" class="form-control">
  {% for color in colors %}
  <option value="{{color}}"{% if settings.color.value == color %} selected{% endif %}>{{color}}</option>
  {% endfor %}
</select>
</div>
</div>


<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Management ipaddress</label>
    <div class="col-md-9">
  <input class="form-control" type="text" name="management_ip" value="{{settings.management_ip.value}}" placeholder=" ipaddress for manager ..">
</div>
</div>

<div class="row mb-3">
  <label for="text-input" class="col-md-3 form-label">Mollie payment key</label>
    <div class="col-md-9">
  <input class="form-control" type="text" name="mollie_key" value="{{settings.mollie_key.value}}" placeholder=" payment key Mollie ..">
</div>
</div>

  <button class="btn btn-primary" type="submit" id="submit-ajax">save settings</button>
</form>
</div>

</div>


</div>

</div>

</div>



{% include "frontend/footer.twig" %}
