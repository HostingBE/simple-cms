{% include "frontend/header.twig" %}

<div class="container">

<h1 class="pt-4 pb-4">Todo bewerken</h1>


{% include "manager/manager-menu.twig" %} 

{% include "backend/alert.twig" %}

<div class="row">

<div class="col-lg-6 col-md-12">
<div class="card mb-3">
<div class="card-body">

<form name="todo" action="/manager/todo-bewerken/{{todo.id}}/" method="POST">
  {{ csrf() | raw }}
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">Todo</label>
  <input class="form-control" type="text" name="ap-todo" value="{{todo.todo}}" placeholder="vul het todo item in!">
</div>

<!-- Select -->
<div class="mb-3">
  <label for="select-input" class="form-label">Categorie</label>
  <select class="form-select" id="select-input" name="ap-categorie">
   {% for cat in categorie %}
    <option value="{{cat.id}}"{% if todo.categorie == cat.id %} selected{% endif %}>{{cat.naam}}</option>
  {% endfor %}
  </select>
</div>

<!-- status area -->
<div class="mb-3">
  <label for="select-input" class="form-label">Status</label>
  <select class="form-select" id="select-input" name="ap-status">
    <option value="o"{% if todo.status == "o" %} selected{% endif %}>Open</option>
    <option value="c"{% if todo.status == "c" %} selected{% endif %}>Gesloten</option>
  </select>
</div>

  <button class="btn btn-primary" type="submit">Wijziging opslaan</button>
</form>
</div>
</div>
</div><!-- /.col -->
</div><!-- /. row -->
</form>


      </div>
      </div>
    </div>



{% include "frontend/footer.twig" %}
