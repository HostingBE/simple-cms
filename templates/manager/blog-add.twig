{% include "frontend/header.twig" %}


<div class="container">        
        <h1 class="pt-4 pb-4">{{ trans('manager.blog.add_blog') | capitalize }}</h1>

{% include "manager/manager-menu.twig" %}
 
{% include "backend/alert.twig" %} 

<div class="row">

<div class="col-12">
  <div class="card mb-3">
    <div class="card-body">

<form name="todo" action="{{url}}/manager/blog-add" method="POST" id="ajax-form">

  {{ csrf() | raw  }}
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.name') | capitalize }}</label>
  <input class="form-control" type="text" name="blog-naam" value="" placeholder="{{ trans('manager.blog.nameplaceholder') | capitalize }}">
</div>
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.title') | capitalize }}</label>
  <input class="form-control" type="text" name="blog-title" value="" placeholder="{{ trans('manager.blog.titleplaceholder') | capitalize }}!">
</div>
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.description') | capitalize }}</label>
  <input class="form-control" type="text" name="blog-description" value="" placeholder="{{ trans('manager.blog.descriptionplaceholder') | capitalize }}!">
</div>
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.keywords') | capitalize }}</label>
  <input class="form-control" type="text" name="blog-keywords" value="" placeholder="{{ trans('manager.blog.keywordsplaceholder') | capitalize }}!">
</div>
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.user') | capitalize }}</label>
  <select name="blog-user" class="form-control">
  {% for user in users %}
  <option value="{{user.id}}">{{user.first_name|capitalize}} {{user.last_name}}</option>
  {% endfor %}
  </select>
</div>
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.tags') | capitalize }}</label>
  <input class="form-control" type="text" name="blog-tags" value="" placeholder="{{ trans('manager.blog.tagsplaceholder') | capitalize }}!">
</div>

<div class="row">
<!-- Text input -->
 <div class="col mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.category') | capitalize }}</label>
  <select name="blog-categorie" class="form-control">
  {% for categorie in categories %}
  <option value="{{categorie.id}}">{{categorie.naam|capitalize}}</option>
  {% endfor %}
  </select>
</div>

<div class="col mb-3">
    <label for="text-input" class="form-label">{{ trans('manager.blog.language') | capitalize }}</label>
    <select name="blog-language" class="form-control">
    {% for language in languages %}
    <option value="{{language}}"{% if blog.language == language %} selected{%endif%}>{{language}}</option>
    {% endfor %}
    </select>
    </div>
</div>
<!-- Text input -->
<div class="mb-3 row">
<div class="col-md-6">
  <label for="text-input" class="form-label">{{ trans('manager.blog.publish') | capitalize }}</label>
<!-- Default switch -->
<div class="form-check form-switch">
  <input class="form-check-input" id="publish" name="blog-publish" type="checkbox" value="y">
  <label class="form-check-label" for="publish">{{ trans('manager.blog.publish') | capitalize }}</label>
   </div>
<!-- Default switch -->
<div class="form-check form-switch">
  <input class="form-check-input" id="links" name="blog-links" type="checkbox" value="y" checked>
  <label class="form-check-label" for="links">{{ trans('manager.blog.internal_links') | capitalize }}</label>
   </div>
   <!-- Default switch -->
<div class="form-check form-switch">
  <input class="form-check-input" id="links" name="blog-markdown" type="checkbox" value="y" checked>
  <label class="form-check-label" for="links">{{ trans('manager.blog.markdown') | capitalize }}</label>
   </div>
</div>
<div class="col-md-6">
  <label for="text-input" class="form-label">{{ trans('manager.blog.publish_date') | capitalize }}</label>
  <input class="form-control" type="text" name="blog-publish-date" value="" placeholder="date of publish if publish is yes" data-toggle="datepicker" data-datepicker-options='{"altInput": true, "altFormat": "F j, Y", "dateFormat": "Y-m-d"}'>
</div>
</div>
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.select_media') | capitalize }}</label>
 <select name="blog-image" class="form-control">
  {% for media in medias %}
  <option value="{{media.id}}">{{media.naam|capitalize}} :: {{media.alt}}</option>
  {% endfor %}
</select>
</div>
<!-- Textarea -->
<div class="mb-3">
  <label for="textarea-input" class="form-label">{{ trans('manager.blog.content') | capitalize }}</label>
  <textarea class="form-control" id="textarea-input" name="blog-content" rows="15" placeholder="{{ trans('manager.blog.contentplaceholder') | capitalize }}!"></textarea>
</div>

  <button class="btn btn-primary" type="submit" id="submit-ajax">{{ trans('manager.blog.add_blog') | capitalize }}</button>
</form>
</div>
</div><!-- /. card -->

</div><!-- /.col -->
</div><!-- /. row -->

  </div>
</div>      



{% include "frontend/footer.twig" %}
