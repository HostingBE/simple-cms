{% include "frontend/header.twig" %}


<div class="container">        
        <h1 class="py-4">{{ trans('manager.blog.edit_blog') | capitalize }}</h1>

{% include "manager/manager-menu.twig" %}

{% include "backend/alert.twig" %} 

<div class="row">
 
<div class="col-md-12">
  <div class="card mb-3">
    <div class="card-body">
     <p class="text-end"><a href="{{url}}/blog-{{blog.id}}-{{blog.title|lower|replace({' ':'-','?':''})}}/" class="btn btn-success btn-sm" target="_blank">view blog item</a></p>

<form name="todo" action="{{url}}/manager/blog-edit/{{blog.id}}/" method="POST" id="ajax-form" data-reload="true">

  {{ csrf() | raw }}
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.name') | capitalize }}</label>
  <input class="form-control" type="text" name="blog-naam" value="{{blog.naam}}" placeholder="vul de naam van de blog in!">
</div>
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.title') | capitalize }}</label>
  <input class="form-control" type="text" name="blog-title" value="{{blog.title}}" placeholder="vul de titel van de blog in!">
</div>
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.description') | capitalize }}</label>
  <input class="form-control" type="text" name="blog-description" value="{{blog.description}}" placeholder="vul de description van de blog in!">
</div>
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.keywords') | capitalize }}</label>
  <input class="form-control" type="text" name="blog-keywords" value="{{blog.keywords}}" placeholder="vul de keywords van de blog in!">
</div>
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.user') | capitalize }}</label>
  <select name="blog-user" class="form-control">
  {% for user in users %}
  <option value="{{user.id}}"{% if blog.user == user.id %} selected{% endif %}>{{user.first_name|capitalize}} {{user.last_name}}</option>
  {% endfor %}
  </select>
</div>
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.tags') | capitalize }}</label>
  <input class="form-control" type="text" name="blog-tags" value="{{blog.tags}}" placeholder="vul de tags van de blog in!">
</div>

<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.category') | capitalize }}</label>
  <select name="blog-categorie" class="form-control">
  {% for categorie in categories %}
  <option value="{{categorie.id}}"{% if blog.category == categorie.id %} selected{% endif %}>{{categorie.naam|capitalize}}</option>
  {% endfor %}
  </select>
</div>
<!-- Text input -->
<div class="mb-3 row">
<div class="col-md-6 col-sm-12">
  <label for="text-input" class="form-label">{{ trans('manager.blog.publish') | capitalize }}</label>
<!-- Default switch -->
<div class="form-check form-switch">
  <input class="form-check-input" id="publish" name="blog-publish" type="checkbox" value="y"{% if blog.publish == "y" %} checked{% endif %}>
  <label class="form-check-label" for="publish">{{ trans('manager.blog.publish') | capitalize }}</label>
   </div>
<!-- Default switch -->
<div class="form-check form-switch">
  <input class="form-check-input" id="links" name="blog-links" type="checkbox" value="y" checked>
  <label class="form-check-label" for="links">{{ trans('manager.blog.internal_links') | capitalize }}</label>
   </div>
   <!-- Default switch -->
<div class="form-check form-switch">
  <input class="form-check-input" id="links" name="blog-markdown" type="checkbox" value="y"{% if blog.markdown == "y" %} checked{% endif %}>
  <label class="form-check-label" for="links">{{ trans('manager.blog.markdown') | capitalize }}</label>
   </div>   
</div>
<div class="col-md-6 col-sm-12">
  <label for="text-input" class="form-label">{{ trans('manager.blog.publish_date') | capitalize }}</label>
  <input class="form-control" type="text" name="blog-publish-date" value="{{blog.publishdate}}" placeholder="date of publish if publish is yes" data-toggle="datepicker" data-datepicker-options='{"altInput": true, "altFormat": "F j, Y", "dateFormat": "Y-m-d"}'>
</div>
</div>
<div class="mb-3">
  <label for="text-input" class="form-label">{{ trans('manager.blog.select_media') | capitalize }}</label>
 <select name="blog-image" class="form-control">
  {% for media in medias %}
  <option value="{{media.id}}"{% if blog.image == media.id %} selected{% endif %}>{{media.naam|capitalize}} :: {{media.alt}}</option>
  {% endfor %}
</select>
</div>
<!-- Textarea -->
<div class="mb-3">
  <label for="textarea-input" class="form-label">{{ trans('manager.blog.content') | capitalize }}</label>
  <textarea class="form-control" id="textarea-input" name="blog-content" rows="15" placeholder="vul de content van de blog in!">{{blog.content}}</textarea>
</div>

  <button class="btn btn-primary" type="submit" id="submit-ajax">{{ trans('manager.blog.edit_blog') }}</button>
</form>
</div>
</div><!-- /. card -->

</div><!-- /.col -->
</div><!-- /. row -->
</form>

  </div>
</div>      



{% include "frontend/footer.twig" %}
