{% include "frontend/header.twig" %}


<div class="container">        
        <h1 class="pt-4 pb-4">Manager blog toevoegen</h1>

{% include "manager/manager-menu.twig" %}

<div class="row">
 
      {% include "backend/alert.twig" %} 
 
<div class="col-12">
  <div class="card mb-3">
    <div class="card-body">

<form name="todo" action="/manager/blog-toevoegen" method="POST" id="ajax-form">

  {{ csrf() | raw  }}
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">Naam</label>
  <input class="form-control" type="text" name="blog-naam" value="" placeholder="vul de naam van de blog in!">
</div>
<div class="mb-3">
  <label for="text-input" class="form-label">Title</label>
  <input class="form-control" type="text" name="blog-title" value="" placeholder="vul de titel van de blog in!">
</div>
<div class="mb-3">
  <label for="text-input" class="form-label">Description</label>
  <input class="form-control" type="text" name="blog-description" value="" placeholder="vul de description van de blog in!">
</div>
<div class="mb-3">
  <label for="text-input" class="form-label">Keywords</label>
  <input class="form-control" type="text" name="blog-keywords" value="" placeholder="vul de keywords van de blog in!">
</div>
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">Gebruiker</label>
  <select name="blog-user" class="form-control">
  {% for user in users %}
  <option value="{{user.id}}">{{user.first_name|capitalize}} {{user.last_name}}</option>
  {% endfor %}
  </select>
</div>
<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">Tags</label>
  <input class="form-control" type="text" name="blog-tags" value="" placeholder="vul de tags van de blog in!">
</div>

<!-- Text input -->
<div class="mb-3">
  <label for="text-input" class="form-label">Categorie</label>
  <select name="blog-categorie" class="form-control">
  {% for categorie in categories %}
  <option value="{{categorie.id}}">{{categorie.naam|capitalize}}</option>
  {% endfor %}
  </select>
</div>
<!-- Text input -->
<div class="mb-3 row">
<div class="col-md-6">
  <label for="text-input" class="form-label">Publish</label>
<!-- Default switch -->
<div class="form-check form-switch">
  <input class="form-check-input" id="publish" name="blog-publish" type="checkbox" value="y">
  <label class="form-check-label" for="publish">Publiceren</label>
   </div>
<!-- Default switch -->
<div class="form-check form-switch">
  <input class="form-check-input" id="links" name="blog-links" type="checkbox" value="y" checked>
  <label class="form-check-label" for="links">Interne links</label>
   </div>
</div>
<div class="col-md-6">
  <label for="text-input" class="form-label">Publish datum</label>
  <input class="form-control" type="text" name="blog-publish-date" value="" placeholder="date of publish if publish is yes" data-toggle="datepicker" data-datepicker-options='{"altInput": true, "altFormat": "F j, Y", "dateFormat": "Y-m-d"}'>
</div>
</div>
<div class="mb-3">
  <label for="text-input" class="form-label">Select media blog plaatje</label>
 <select name="blog-image" class="form-control">
  {% for media in medias %}
  <option value="{{media.id}}">{{media.naam|capitalize}} :: {{media.alt}}</option>
  {% endfor %}
</select>
</div>
<!-- Textarea -->
<div class="mb-3">
  <label for="textarea-input" class="form-label">Content van de pagina</label>
  <textarea class="form-control" id="textarea-input" name="blog-content" rows="15" placeholder="vul de content van de blog in!"></textarea>
</div>

  <button class="btn btn-primary" type="submit" id="submit-ajax">Blog artikel toevoegen</button>
</form>
</div>
</div><!-- /. card -->

</div><!-- /.col -->
</div><!-- /. row -->

  </div>
</div>      



{% include "frontend/footer.twig" %}
