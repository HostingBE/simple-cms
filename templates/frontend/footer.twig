<!-- Chat modal -->

<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="MyChatModal" aria-hidden="true" id="chatModal">
  <div class="modal-dialog position-fixed bottom-0 end-0 px-2">
    <div class="modal-content bg-white" style="width: 300px;">
        <form name="chat-modal" id="form-chat" method="POST" action="{{url}}/chat-signin">

         {{ csrf() | raw }}

        <div class="modal-header">Live Chat</div>

        <div class="modal-body chat-messages overflow-auto" style="height: 350px;">

        <div class="form-group py-2">
              <input type="text" class="form-control" name="name" placeholder=".e.g. your name">
        </div>
        <div class="form-group py-2">
        <input type="text" class="form-control" name="email" placeholder=".e.g. your e-mail"> 
        </div>
        <div class="form-group py-2">
            <textarea class="form-control" name="message" cols="30" rows="6" placeholder=".e.g. your message"></textarea>
            </div>
        
       <div class="alert alert-danger d-none" id="chatmessage"></div>  
    </div>
         <div class="modal-footer"><button class="btn btn-primary text-end" type="submit" id="submit-chat">Send</button></div>

        </div>
    </form>
  </div>
</div>
