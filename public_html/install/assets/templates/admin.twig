{% include 'header.twig' %}
<div class="d-flex justify-content-center">
    <div class="row pt-5 w-50">
    <h1 class="pt-5 text-white">{{ title | capitalize }}</h1>

    {% include 'menu.twig' %}

<div class="col-md-9 bg-white rounded-right-3">

<h2 class="py-4">Admin settings</h2>

<form>
    <div class="row p-2">
      <label for="name" class="form-label col-md-4">Name:</label>
      <div class="col-md-8">
      <input type="name" class="form-control" id="name" aria-describedby="nameHelp">
      <div id="nameHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    </div>
    <div class="row p-2">

      <label for="email" class="form-label col-md-4">E-mail:</label>
      <div class="col-md-8">
      <input type="text" class="form-control" id="email">
    </div>
</div>

<div class="row p-2">

    <label for="password" class="form-label col-md-4">Password:</label>
    <div class="col-md-8">
    <input type="text" class="form-control" id="password">
  </div>
</div>

      <button type="submit" class="btn btn-primary my-2 float-end">Next</button>
  </form>

</div>
{% include 'urls.twig' %}
</div>
</div>

{% include 'footer.twig' %}